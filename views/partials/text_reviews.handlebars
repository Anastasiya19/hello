<!-- Review filter -->
<div class="message message_vinci clearfix">
    <div class="message__item message__item_view view  br-chat message__item_review-filter">
        <h5 class="message__item_title">Review filter</h5>
        <div class="message__item-wrap">
            <ul class="helpers__list">
                <li class="helpers__item">
                    Camera(7)
                </li>
                <li class="helpers__item">
                    Processor(0)
                </li>
                <li class="helpers__item">
                    Battery(2)
                </li>
                <li class="helpers__item">
                    Quality(1)
                </li>
                <li class="helpers__item">
                    Display(234)
                </li>
                <li class="helpers__item">
                    Modem(0)
                </li>
                <li class="helpers__item">
                    Wi-Fi(3)
                </li>
                <li class="helpers__item">
                    Sensors
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- Review filter text -->
<div class="message message_vinci clearfix owl-carousel owl-theme">
    \{{#each reviews_pairs}}

    <div class="review-pair">
        \{{#each this}}

        <div class="message__item message__item_view view  br-chat message__item_review">
            <div class="message__item-info clearfix">
                <div class="message__item-rate">
<svg width="87px" height="15px" viewBox="0 0 87 15" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <!-- Generator: Sketch 48.1 (47250) - http://www.bohemiancoding.com/sketch -->
    <desc>Created with Sketch.</desc>
    <defs></defs>
    <g id="Chatbot-V3" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
        <g id="Chat-Stage-1---Review_1280" transform="translate(-70.000000, -290.000000)" fill="#F5A623">
            <g id="Group-6" transform="translate(60.000000, 271.000000)">
                <g id="Group-5" transform="translate(10.8000000, 19.000000)">
                    \{{{create_rating_stars this.rating}}}
                   
                </g>
            </g>
        </g>
    </g>
</svg>
                </div>
                <div class="message__item-author">
                    <p style="font-size:12px">\{{this.review_date}}, by \{{this.reviewer}}, Amazon</p>
                </div>
            </div>
            <div class="collection__description">
                <h3 class="collection__name">\{{this.title}}</h3>
                <div class="collection__text collection__text-collapsed" onclick="(function(e){ e.currentTarget.classList.toggle('collection__text-collapsed');})(event)">
                    <p>
                        \{{this.text}}
                    </p>
                </div>

            </div>
        </div>

        \{{/each}}


    </div>

    \{{/each}}
</div>